<?xml version="1.0" encoding="utf-8"?>

                                                        

    

                 
                           
                                                               
           

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp" android:tag="layout/asteroid_item_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#393939"
            android:padding="8dp">

            <!--Change the id name-->
            <ImageView
                android:id="@+id/image_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="@string/status_icon"
                android:src="@drawable/ic_status_normal"
                android:tag="binding_1"                           />

            <TextView
                android:id="@+id/asteroidName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image_view"
                android:tag="binding_2"            
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/asteroidDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/asteroidName"
                android:layout_toEndOf="@+id/image_view"
                android:tag="binding_3"                     
                android:textColor="@android:color/white" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
         